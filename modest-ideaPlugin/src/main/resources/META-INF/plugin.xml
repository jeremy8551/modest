<!-- Plugin Configuration File. Read more: https://plugins.jetbrains.com/docs/intellij/plugin-configuration-file.html -->
<idea-plugin>
    <!-- Unique identifier of the plugin. It should be FQN. It cannot be changed between the plugin versions. -->
    <id>cn.org.expect.intellijidea.plugin.maven</id>

    <!-- Public plugin name should be written in Title Case.
         Guidelines: https://plugins.jetbrains.com/docs/marketplace/plugin-overview-page.html#plugin-name -->
    <name>Mavens</name>

    <category>Build Tools</category>

    <description>
        <![CDATA[
      Provides Maven Repository Search support.
      The following features are available:
        <ul>
        <li>Online query Maven Central Repository.</li>
        <li>Clean Local Repository *.lastUpdated.</li>
        <li>Open Local Repository.</li>
        <li>Navigate the query results to Central Repository.</li>
        <li>Navigate the query results to Local Repository.</li>
        </ul>
      ]]>
    </description>

    <!-- A displayed Vendor name or Organization ID displayed on the Plugins Page. -->
    <vendor email="jeremy8551@qq.com" url="https://github.com/jeremy8551/modest">Jeremy8551</vendor>

    <!-- Product and plugin compatibility requirements.
         Read more: https://plugins.jetbrains.com/docs/intellij/plugin-compatibility.html -->
    <depends>com.intellij.modules.platform</depends>
    <depends>com.intellij.properties</depends>
    <depends>org.jetbrains.idea.reposearch</depends>
    <depends>org.jetbrains.idea.maven</depends>
    <depends>org.jetbrains.idea.maven.model</depends>
    <depends>org.jetbrains.idea.maven.server.api</depends>

    <!-- Extension points defined by the plugin.
         Read more: https://plugins.jetbrains.com/docs/intellij/plugin-extension-points.html -->
    <extensions defaultExtensionNs="com.intellij">
        <!--        <lang.findUsagesProvider implementationClass="cn.org.expect.intellijidea.plugin.maven.provider.MavenFindUsagesProvider" language=""/>-->
        <searchEverywhereContributor implementation="cn.org.expect.intellijidea.plugin.maven.MavenFinderFactory"/>
    </extensions>

    <actions>
        <!-- 打开本地Maven仓库 -->
        <action id="MavenFinderOpenLocalMavenRepository" class="cn.org.expect.intellijidea.plugin.maven.action.MavenFinderOpenLocalMavenRepository" text="Maven Local Repository" description="打开 Maven 本地仓库">
        </action>

        <!-- 删除本地仓库中 *.lastUpdated 文件 -->
        <action id="MavenFinderDeleteLastUpdated" class="cn.org.expect.intellijidea.plugin.maven.action.MavenFinderDeleteLastUpdated" text="Maven Clean *.lastUpdated" description="删除 Maven 本地仓库中的 *.lastUpdated 文件">
        </action>

        <!-- 绘制菜单 -->
        <group popup="false" id="MavenFinder" text="MavenFinder">
            <separator/> <!--分隔符-->
            <reference ref="MavenFinderOpenLocalMavenRepository"/>
            <reference ref="MavenFinderDeleteLastUpdated"/>
            <separator/> <!--分隔符-->
            <add-to-group group-id="ToolsMenu" anchor="first"/>
        </group>
    </actions>
</idea-plugin>