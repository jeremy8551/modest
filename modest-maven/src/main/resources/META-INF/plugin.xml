<!-- Plugin Configuration File. Read more: https://plugins.jetbrains.com/docs/intellij/plugin-configuration-file.html -->
<idea-plugin>
    <!-- Unique identifier of the plugin. It should be FQN. It cannot be changed between the plugin versions. -->
    <id>cn.org.expect.intellijidea.plugin.maven</id>

    <!-- Public plugin name should be written in Title Case.
         Guidelines: https://plugins.jetbrains.com/docs/marketplace/plugin-overview-page.html#plugin-name -->
    <name>Maven+</name>
    <category>Build Tools</category>

    <description>
        <![CDATA[
      <p>Provide search in Central Maven Repository.</p>
      The following features are available:
        <ul>
        <li>Online search artifact in Maven Central Repository.</li>
        <li>Clean “*.lastUpdated” in Local Repository.</li>
        <li>Open local repository directory.</li>
        <li>Navigate the search result to Central Repository.</li>
        <li>Navigate the search result to Local Repository.</li>
        </ul>
      ]]>
    </description>

    <!-- 配置国际化资源 -->
    <resource-bundle>messages.MavenPluginBundle</resource-bundle>

    <!-- A displayed Vendor name or Organization ID displayed on the Plugins Page. -->
    <vendor email="jeremy8551@qq.com" url="https://github.com/jeremy8551/modest">Jeremy8551</vendor>

    <!-- Product and plugin compatibility requirements.
         Read more: https://plugins.jetbrains.com/docs/intellij/plugin-compatibility.html -->
    <depends>com.intellij.modules.platform</depends>
    <depends>com.intellij.properties</depends>
    <depends>org.jetbrains.idea.reposearch</depends>
    <depends optional="true" config-file="plugin-maven.xml">org.jetbrains.idea.maven</depends>
    <depends>org.jetbrains.idea.maven.model</depends>
    <depends>org.jetbrains.idea.maven.server.api</depends>

    <!-- Extension points defined by the plugin.
         Read more: https://plugins.jetbrains.com/docs/intellij/plugin-extension-points.html -->
    <extensions defaultExtensionNs="com.intellij">
        <applicationInitializedListener implementation="cn.org.expect.maven.intellij.idea.listener.MavenSearchPluginApplicationListener" id="Maven+"/>
        <!--<lang.findUsagesProvider implementationClass="cn.org.expect.intellijidea.plugin.maven.provider.MavenFindUsagesProvider" language=""/>-->
        <searchEverywhereContributor implementation="cn.org.expect.maven.intellij.idea.MavenSearchPluginFactory"/>
    </extensions>

    <actions>
        <!-- 打开本地Maven仓库 -->
        <action id="OpenLocalRepository" class="cn.org.expect.maven.intellij.idea.action.OpenLocalRepository" text="Maven Local Repository" description="打开 Maven 本地仓库">
        </action>

        <!-- 删除本地仓库中 *.lastUpdated 文件 -->
        <action id="CleanRepositoryLastUpdated" class="cn.org.expect.maven.intellij.idea.action.CleanRepositoryLastUpdated" text="Maven Clean *.lastUpdated" description="删除 Maven 本地仓库中的 *.lastUpdated 文件">
        </action>

        <!-- 绘制菜单 -->
        <group popup="false" id="MavenPlusID" text="MavenFinder">
            <separator/> <!--分隔符-->
            <reference ref="OpenLocalRepository"/>
            <reference ref="CleanRepositoryLastUpdated"/>
            <separator/> <!--分隔符-->
            <add-to-group group-id="ToolsMenu" anchor="first"/>
        </group>
    </actions>
</idea-plugin>